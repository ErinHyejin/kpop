<div id="notice"></div>

<div id="main-container" class="container-fluid">
  <div class="row">
    <div id="sidebar" class="col-xs-3">
      <!--<h1>Filters</h1>-->

      <!--year-->
      <!--<div id="year" class="filter-slider"></div><br>-->


      <h1>Sorting</h1>
      <div class="upvoteasc"><button>Upvote(asc)</button></div>
      <div class="upvotedesc"><button>Upvote(desc)</button></div>
      <div class="youtubeasc"><button>Youtube_views(asc)</button></div>
      <div class="youtubedesc"><button>Youtube_views(desc)</button></div>
      <div class="uploadasc"><button>Upload_date(asc)</button></div>
      <div class="uploaddesc"><button>Upload_date(desc)</button></div>

      <hr>


      <div class="filter"> <h1>Filters</h1><br>
        Field: <input type="text" name="field" id="field"><br>
        From: <input type="number" name="from" id="from"><br>
        To: <input type="number" name="to" id="to"><br>
        <input type="submit" value="submit" id="submit">
      </div>
    </div>

    <div class="modal fade" id="basicModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-body">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
            <div>
              <iframe id="iframe" width="560" height="315" src="" frameborder="0" allowfullscreen></iframe>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div id="main-content" class="col-xs-9">
      <ul class="thumbnails">
        <% @videos.each do |video| %>
          <%= render 'each_video', :video => video %>
        <% end %>
      </ul>

    </div>
  </div>
</div>



<%= render partial: "each_video_handlebar"%>