<div id="notice"></div>

<div id="main-container" class="container-fluid">
  <div class="row">
    <div id="sidebar" class="col-xs-3">
      <h1>Filters</h1>

      year
      <div id="year" class="filter-slider"></div>

    </div>

    <div class="modal fade" id="basicModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-body">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
            <div>
              <iframe width="560" height="315" src="https://www.youtube.com/embed/ASO_zypdnsQ" frameborder="0" allowfullscreen></iframe>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div id="main-content" class="col-xs-9">
      <ul class="thumbnails">
        <% @videos.each do |video| %>
          <li>
            <div class="thumbnail_image">
              <a href="#" data-toggle="modal"
                 data-target="#basicModal"><%= image_tag video.thumbnail %></a>
            </div>
            <div class="thumbnail_title">
              <%= video.title_korean %>
            </div>
            <% if video.title_english %>
              <div class="thumbnail_title_eng">
                <%= video.title_english %>
              </div>
            <% end %>
          </li>
        <% end %>
      </ul>

    </div>
  </div>
</div>
