<div id="notice"></div>

<div id="main-container" class="container-fluid">
  <div class="row">
    <div id="sidebar">
      <div class="top_bar row">
        <h2 class="titleFilter">Filters</h2>
        <hr></hr>
      </div>

      <%= render 'left_menu' %>
    </div>    

    <%= render 'video_dialog' %>

    <div id="main-content">
      <div class="top_bar row">
        <h2 class="titleKpop">K-pop tv</h2>
        <hr></hr>
      </div>

      <div class="header_panel row">
        <div class="numResults col-md-5">7160 results</div>
        <div class="dropdown col-md-2">
            <button class="btnSort btn dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true"><span class="selection">SORT</span> <span class="caret"></span></button>
            <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
              <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Default</a></li>
              <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Sexiness</a></li>
              <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Cheesiness</a></li>
              <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Approval Rating</a></li>
              <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Youtube Views</a></li>
              <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Most Recent First</a></li>
              <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Oldest First</a></li>
            </ul>
        </div>        
          
        <%= render 'view_menu_box' %>
      </div>
      <div id="cards" class="cards transitions-enabled row">
        <% @videos.each do |video| %>
          <%= render 'video_card', :video => video %>
        <% end %>
      </div>

    </div>
  </div>
</div>



